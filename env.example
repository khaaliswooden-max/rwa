# =============================================================================
# RWA Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=RWA
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL with TimescaleDB
DATABASE_URL=postgresql://rwa_user:rwa_password@localhost:5432/rwa_dev

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# SCADA Integration
# SCADA_ENDPOINT=
# SCADA_API_KEY=

# AMI System Integration
# AMI_ENDPOINT=
# AMI_API_KEY=

# Email Service (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=noreply@example.com

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/rwa.log

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_NRW_MODULE=true
ENABLE_ENERGY_MODULE=true
ENABLE_COMPLIANCE_MODULE=true
ENABLE_OFFLINE_MODE=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# -----------------------------------------------------------------------------
# Cache (Optional - Redis)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL_SECONDS=300

