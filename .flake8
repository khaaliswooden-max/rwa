[flake8]
max-line-length = 88
extend-ignore = E203, E501, W503, D212
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    migrations,
    *.egg-info,
    node_modules
per-file-ignores =
    __init__.py: F401
    tests/*: S101, F401, F841
    scripts/*: F401
    api/routers/*: B008
max-complexity = 12
docstring-convention = google

